@model Tuple<List<_BlogCategoryList_Result>>
@{
	int iRow = 1;
	string? status = "";
}



@section Styles {
	<link href="/assets/css/custom.css" rel="stylesheet" />
}

<div class="container-fluid">
	<h1 class="h3 mb-4 text-gray-800">Blog Kategori Listesi</h1>
	<div class="card shadow mb-4">
		<div class="card-header py-3 page-title-btn">
			<a href="/blog-category-create" class="btn btn-primary"><i class="fas fa-plus"></i> Blog Kategori Ekle</a>
		</div>
		<div class="card-body">
			<div class="table-responsive">
				@if (Model.Item1.Count() > 0)
				{
					<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
						<thead>
							<tr>
								<th>#</th>
								<th>Blog Kategori Adı</th>
								<th>Durum</th>
								<th>Oluşturma Tarihi</th>
								<th>İşlemler</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model.Item1)
							{
								status = item.Status == true ? "checked" : "";
								<tr>
									<td>@iRow</td>
									<td>@item.BlogCategorySubName</td>
									<td>
										<div class="form-switch">
											<input class="form-check-input" type="checkbox" role="switch" onchange="blogStatus(@item.BlogCategoryID)" id="flexSwitchCheckChecked" @status>
										</div>
									</td>
									<td>@Convert.ToDateTime(item.RegisterDate).ToShortDateString()</td>
									<td>
										<a href="/blog-update?blogID=@item.BlogCategoryID" class="btn btn-success fnt-size" title="Güncelle"><i class="fas fa-pen"></i></a>
										<a href="javascript:void(0);" onclick="blogDelete(@item.BlogCategoryID)" class="btn btn-danger fnt-size" title="Sil"><i class="fas fa-trash"></i></a>
									</td>
								</tr>
								iRow++;
							}
						</tbody>
					</table>
				}
				else
				{
					<div class="alert alert-danger">
						<p>Eklenmiş Blog Kategori Bulunamadı</p>
					</div>
				}
			</div>
		</div>
	</div>
</div>


