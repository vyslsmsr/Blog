@section scripts {

	<script src="/assets/js/sweet-alert.js"></script>

	<script>

		function blogStatus(blogID) {
			$.ajax({
				type: "POST",
				url: "/blog-status",
				data: { blogID: blogID },
				datatype: "html",
				success: function (data) {
					if (data.includes("___")) {

					}
					else {
						Swal.fire({
							icon: 'error',
							title: 'Oops...',
							text: data,
						})
					}
				},
				error: function () {
					Swal.fire({
						icon: 'error',
						title: 'Oops...',
						text: data,
					})
				}
			});
		}

		function blogDelete(blogID) {
			Swal.fire({
				title: 'Emin misin?',
				text: "Bunu geri alamazsınız!",
				icon: 'warning',
				showCancelButton: true,
				confirmButtonColor: '#3085d6',
				cancelButtonColor: '#d33',
				confirmButtonText: 'Evet, silin!'
			}).then((result) => {
				if (result.isConfirmed) {
					Swal.fire(
						'Silindi!',
						'Dosyanız silindi.',
						'Başarılı'
					)
					$.ajax({
						type: "POST",
						url: "/blog-delete",
						data: { blogID: blogID },
						datatype: "html",
						success: function (data) {
							if (data.includes("___"))
								window.location.reload();
							else {
								Swal.fire({
									icon: 'error',
									title: 'Oops...',
									text: data,
								})
							}
						},
						error: function () {
							Swal.fire({
								icon: 'error',
								title: 'Oops...',
								text: data,
							})
						}
					});
				}
			})
		}

		

	</script>

}