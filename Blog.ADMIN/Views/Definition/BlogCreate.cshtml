@section Styles {
	<link href="/assets/css/custom.css?v=2" rel="stylesheet" />
}

<div class="container-fluid">
	<h1 class="h3 mb-4 text-gray-800">Blog Oluşturma</h1>
	<div class="card shadow mb-4">
		<div class="card-header py-3 page-title-btn">
			<a href="/blog" class="btn btn-primary"><i class="fas fa-undo-alt"></i> Geri Dön</a>
		</div>
		<div class="card-body">
			<form action="javascript:postCreate()" method="post" autocomplete="off">
				<div class="row mt-3">
					<div class="col-2">
						<label for="blogName" class="col-form-label">Blog Adı</label>
					</div>
					<div class="col-10">
						<input type="text" id="blogName" class="form-control" aria-describedby="Blog Adı" maxlength="250">
					</div>
				</div>
				<div class="row mt-3">
					<div class="col-2">
						<label for="blogCategory" class="col-form-label">Blog Kategori</label>
					</div>
					<div class="col-10">
						<select class="form-control" id="blogCategory">
							<option value="0">Blog Kategori Seç</option>
							<option value="1">Sağlık</option>
							<option value="2">Spor</option>
						</select>
					</div>
				</div>
				<div class="form-content-title"><h5 class="font-bold">Blog Content</h5></div>
				<div class="row mt-3">
					<div class="col-2">
						<label for="blogSubName" class="col-form-label">Blog Adı</label>
					</div>
					<div class="col-10">
						<input type="text" id="blogSubName" class="form-control" aria-describedby="Blog Adı" maxlength="250">
					</div>
				</div>
				<div class="row mt-3">
					<div class="col-2">
						<label for="shortText" class="col-form-label">Blog Kısa Açıklama</label>
					</div>
					<div class="col-10">
						<textarea type="text" id="shortText" class="form-control" aria-describedby="Blog Kısa Açıklama" maxlength="1000"></textarea>
					</div>
				</div>
				<div class="row mt-3">
					<div class="col-2">
						<label for="shortText" class="col-form-label">Blog Açıklama</label>
					</div>
					<div class="col-10">
						<textarea name="ckeditor" id="blogContent"  aria-describedby="Blog Açıklama"></textarea>
					</div>
				</div>
				<div class="row mt-3">
					<div class="col-2">
						<label for="title" class="col-form-label">Title</label>
					</div>
					<div class="col-10">
						<input type="text" id="title" class="form-control" aria-describedby="Title" maxlength="250">
					</div>
				</div>
				<div class="row mt-3">
					<div class="col-2">
						<label for="description" class="col-form-label">Description</label>
					</div>
					<div class="col-10">
						<input type="text" id="description" class="form-control" aria-describedby="Description" maxlength="250">
					</div>
				</div>
				<div class="row mt-3">
					<div class="col-2">
						<label for="url" class="col-form-label">Url</label>
					</div>
					<div class="col-10">
						<input type="text" id="url" class="form-control" aria-describedby="Url" maxlength="250">
					</div>
				</div>
				<div class="row">
					<div class="col-12">
						<div class="form-submit-btn">
							<button type="submit" class="btn btn-success">Kaydet</button>
						</div>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>

@section scripts {

	<script src='https://cdn.ckeditor.com/4.12.1/standard-all/ckeditor.js'></script>

	<script>
		var editor = CKEDITOR.replace('ckeditor', {
			extraPlugins: 'dialog,colordialog,colorbutton,colordialog'
		});


		editor.on('instanceReady', function (evt) {
			evt.editor.addCommand('h2', new CKEDITOR.styleCommand(new CKEDITOR.style({ element: 'h2' })));
			evt.editor.setKeystroke(CKEDITOR.CTRL + 50 /*U*/, 'h2');
		});

	</script>
}